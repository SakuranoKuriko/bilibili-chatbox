transition()
  transition arguments
  -webkit-transition arguments

transform()
  transform arguments
  -webkit-transform arguments

dflex()
  display -webkit-flex
  display flex

.hide
  visibility hidden

.show
  visibility visible

.spanner-icon
  background #44f
  width 30px
  height @width

$animetime = 0.5s

input 
button 
  outline none
  border none 
  margin 0
  padding 1px 0
  transition(all .1s)
  background white
  
  &:hover
  &:focus
    background #dff

  &:active
    background #bff

body
  background-color rgba(0,0,0,0)
  margin 0 auto
  overflow hidden

  #bc-main
    
    .bc-wrap
      dflex()
      height 100vh
      width 100vw

      .bcs
        dflex()
        flex auto
        margin 10px
        flex-flow column nowrap
        justify-content flex-end
        font-size 24px

        .bc
          flex none
          transition(all $animetime)
    
    #menu
      position fixed
      width 100vw
      height 100vh
      top -100vh
      left 0
      opacity 0
      transition(all $animetime)
      
      &.show
        opacity 1
        transform(translateY(100vh))

      > div
        position absolute 
        transition(all $animetime)

      .menu-mask
        width 104%
        height 104%
        left -2%
        top -2%
        background black 
        opacity 0.2
        z-index 9

      .menu-wrap
        dflex()
        flex-flow column nowrap
        justify-content center
        align-items center
        width 380px
        height 240px
        top 50%
        left 50%
        margin-top -(@height / 2)
        margin-left -(@width / 2)
        z-index 10
        text-align center 
        background rgba(0,0,0,.1)
        border-radius 20px

        > div
          margin-bottom 3px

          > label
            display inline-block
            width 250px
            text-align right
          
          > input 
            text-align center
            margin-left 10px
            width 76px
            height 16px
            vertical-align middle
          
          > input[type="range"]
            -webkit-appearance none
            width 95%
            height 8px
            border-radius (@height / 2)
            margin 10px 0
            background #bff

            &::-webkit-slider-thumb
              -webkit-appearance none
              width 16px
              height @width
              border-radius 50%
              background #48f
              margin-top -4px
            
            &::-webkit-slider-runnable-track
              height 8px
              border-radius (@height / 2)
          
        button
          margin-top 2px
          height 30px
          width 100px
          border-radius 5px

.comment-fade
  transition(all $animetime)

.comment-fade-enter
.comment-fade-leave-to
.confmenu-enter
.confmenu-leave-to
  opacity 0

.comment-fade-enter
  transform(translateY(24px) translateX(12px))

.comment-fade-leave-to
  transform(translateY(-24px))
