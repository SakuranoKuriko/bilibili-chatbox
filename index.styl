transition()
  transition arguments
  -webkit-transition arguments

transform()
  transform arguments
  -webkit-transform arguments

dflex()
  display -webkit-flex
  display flex

.hide
  visibility hidden

.show
  visibility visible

$animetime = 0.5s

input 
button 
  outline none
  border none 
  transition(all .1s)
  
  &:hover
  &:focus
    background #dff

  &:active
    background #bff

body
  background-color rgba(0,0,0,0)
  margin 0 auto
  overflow hidden

  #bc-main
    
    .bc-wrap
      dflex()
      height 100vh
      width 100vw

      .bcs
        dflex()
        flex auto
        margin 10px
        flex-flow column nowrap
        justify-content flex-end
        font-size 24px

        .bc
          flex none
          transition(all $animetime)
    
    #menu
      position fixed
      width 100vw
      height 100vh
      top -100vh
      left 0
      opacity 0
      transition(all $animetime)
      
      &.show
        opacity 1
        transform(translateY(100vh))

      > div
        position absolute 
        transition(all $animetime)

      .menu-mask
        width 104%
        height 104%
        left -2%
        top -2%
        background black 
        opacity 0.2
        z-index 9

      .menu-wrap
        dflex()
        flex-flow column nowrap
        justify-content center
        align-items center
        width 300px
        height 110px
        top 50%
        left 50%
        margin-top -(@height / 2)
        margin-left -(@width / 2)
        z-index 10
        text-align center 
        background rgba(0,0,0,.1)
        border-radius 20px

        > div

          > span
            display inline-block
            width 150px
          
          > input 
            text-align center
            margin-left 10px
            width 100px
            margin-top 5px
          
        button
          margin-top 10px
          height 30px
          width 100px
          border-radius 5px

.comment-fade
  transition(all $animetime)

.comment-fade-enter
.comment-fade-leave-to
.confmenu-enter
.confmenu-leave-to
  opacity 0

.comment-fade-enter
  transform(translateY(24px) translateX(12px))

.comment-fade-leave-to
  transform(translateY(-24px))
